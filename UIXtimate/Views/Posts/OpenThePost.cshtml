@model UIXtimate.Models.PostViewModels.PostContent
<h1>@Model.PostContentVM.Title</h1>
<h3>@Model.PostContentVM.Description</h3>
<p>Дата создания: @Model.PostContentVM.Created</p>
<p>Создал: @Model.PostContentVM.Author</p>
<table class="table table-hover" id="postIndexTable">
    <tbody>
        @foreach (var ans in Model.PostContentVM.Replies)
        {
            <tr>
                <td>
                    @ans.Author.UserName
                </td>
                <td>
                    @ans.Content
                </td>
            </tr>
        }
    </tbody>
</table>
